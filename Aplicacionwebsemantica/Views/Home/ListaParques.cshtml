@model IEnumerable<Aplicacionwebsemantica.Models.HospitalEntidad>

@{
    ViewBag.Title = "ListaParques";
}

<style>

    .cont {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bo {
        margin-left: 5px;
    }
</style>
<link href="~/Content/bt/datatables/DataTables-1.10.18/css/dataTables.bootstrap4.css" rel="stylesheet" />


<form action="/Home/ListarHospital" method="post">



    <h1 class="text-center">¿Buscar Parque Natural?</h1>
    <div class="cont">
        <input class="form-control  " type="text" name="buscar" />
        <input class="btn btn-primary bo " type="submit" value="Buscar" />
    </div>


</form>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table id="example" class="table table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Parque Natural
                            </th>
                            <th>
                                Situado en
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreHospital)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SituadoEn)
                                </td>

                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>
                                Parque Natural
                            </th>
                            <th>
                                Situado en
                            </th>

                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/bt/js/jquery-3.6.0.min.js"></script>
@*<script src="~/Content/bt/js/popper.min.js"></script>*@
@*<script src="~/Content/bt/datatables/datatables.min.js"></script>*@
<script>
                    $(document).ready(function () {
                        $('#example').DataTable({
                            //para cambiar el lenguaje a español
                            "language": {
                                "lengthMenu": "Mostrar _MENU_ registros",
                                "zeroRecords": "No se encontraron resultados",
                                "info": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                                "infoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                                "infoFiltered": "(filtrado de un total de _MAX_ registros)",
                                "sSearch": "Buscar:",
                                "oPaginate": {
                                    "sFirst": "Primero",
                                    "sLast": "Último",
                                    "sNext": "Siguiente",
                                    "sPrevious": "Anterior"
                                },
                                "sProcessing": "Procesando...",

                            },
                            searching: false
                        });

                    });
</script>
